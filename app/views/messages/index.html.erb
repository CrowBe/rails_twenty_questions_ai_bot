<p style="color: green"><%= notice %></p>

<h1>Messages</h1>

<div id="messages">
  <% @messages.each do |message| %>
    <%= render message %>
    <p>
      <%= link_to "Show this message", message %>
    </p>
  <% end %>
</div>
<h4>
  Current Count: <%= @messages.where(role: "assistant").where.not(content: "No").count%>
</h4>
<%= link_to "New message", new_message_path %>
<%= form_for Message.new, url: messages_reply_path do |f| %>
  <label>Get Reply</label>
  <%= f.submit %>
<% end %>